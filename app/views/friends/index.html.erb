<% if user_signed_in? %>
<p id="notice" class="alert alert-danger"><%= notice %></p>

<h1>Friends List</h1>

<table class="table table-striped table-bordered">
  <thead class="thead-dark">
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Twitter</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @friends.each do |friend| %>
     <% if current_user.id == friend.user_id %>
      <tr>
        <td><%= link_to friend.first_name + ' ' + friend.last_name , friend %></td>
        <td><%= friend.email %></td>
        <td><%= friend.phone %></td>
        <td><%= friend.twitter %></td>
        <td><%= link_to 'delete', friend, method: :delete, data: { confirm: 'Are you sure?' } , class:'btn btn-sm btn-outline-danger' %></td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Friend', new_friend_path %>
<% else %>
  <h1>Hello World!</h1>
  This is my first Webpage....
<% end %>
